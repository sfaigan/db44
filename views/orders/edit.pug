extends ../layout

block content
  .container
    .row.justify-content-center
      .col-md-6
        .card.mb-3
          h2.card-header Edit Product
          .card-body
            form.edit-order-form(method='POST', action=`/orders/${order._id}?_method=PUT`)
              label(for="userId") userId:
              input.userId-input.form-control.mb-4(type="text" id="userId" name="userId" aria-describedby="userIdHelp" value=order.userId)
              label(for="billingAddress") Billing Address (JSON):
              textarea.billing-address-input.form-control.mb-4(type="text" id="billingAddress" name="billingAddress" aria-describedby="addressHelp")= `${JSON.stringify(order.billingAddress, null, 2)}`
              label(for="shippingAddress") Shipping Address (JSON):
              textarea.shipping-address-input.form-control.mb-4(type="text" id="shippingAddress" name="shippingAddress" aria-describedby="addressHelp")= `${JSON.stringify(order.shippingAddress, null, 2)}`
              label(for="paymentMethod") Payment Method:
              input.payment-method-input.form-control.mb-4(type="text" id="paymentMethod" name="paymentMethod" aria-describedby="paymentMethodHelp" value=order.paymentMethod)
              label(for="status") Order Status:
              input.status-input.form-control.mb-4(type="text" id="status" name="status" aria-describedby="orderHelp" value=order.status)
              label(for="items") Items:
              input.items-input.form-control.mb-4(type="text" id="items" name="items" aria-describedby="itemsHelp" value=order.items)
              button.btn.btn-primary.btn-block(type="submit") Submit