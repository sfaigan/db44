extends ../layout

block content
    .container
        .py-5.text-center
            h1= title
        .row
            .col-md-8.cart.md-1.mb-4
                h4.d-flex.justify-content-between.align-items-center.mb-3
                    span.text-muted Details
                .card
                    .card-body
                        .row
                            .col-md-6.mb-3
                                h5.card-title Billing Address
                                .card-text #{cart.billingAddress.firstName} #{cart.billingAddress.lastName}
                                .card-text #{cart.billingAddress.line1} #{cart.billingAddress.line2}
                                .card-text #{cart.billingAddress.city}, #{cart.billingAddress.province}, #{cart.billingAddress.postalCode}
                                .card-text #{cart.billingAddress.country}
                            .col-md-6.mb-3
                                h5.card-title Payment Information
                                .card-text #{cart.paymentMethod}
                        .row
                            .col-md-6.mb-3
                                h5.card-title Shipping Address
                                .card-text #{cart.shippingAddress.firstName} #{cart.shippingAddress.lastName}
                                .card-text #{cart.shippingAddress.line1} #{cart.shippingAddress.line2}
                                .card-text #{cart.shippingAddress.city}, #{cart.shippingAddress.province}, #{cart.shippingAddress.postalCode}
                                .card-text #{cart.shippingAddress.country}
            .col-md-4.cart.md-2.mb-4
                h4.d-flex.justify-content-between.align-items-center.mb-3
                    span.text-muted Order
                    span.badge.badge-secondary.badge-pill= numItemsInCart
                ul.list-group.mb-3
                    each product in products
                        li.list-group-item.d-flex.justify-content-between.lh-condensed
                            div
                                h6.my-0= product.name
                                small.text-muted Quantity: #{product.quantity}
                            span.text-muted= product.price
                    li.list-group-item.d-flex.justify-content-between
                        span Total (CAD)
                        strong= cost
        a.btn.btn-primary.btn-lg.btn-block.mb-4(href='/checkout/confirm') Confirm order